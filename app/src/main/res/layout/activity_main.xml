<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:gravity="center_vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/menuRow1"
        android:gravity="center"
        >
        <com.thowo.jmframework.component.JMVerticalButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRealMenu"
            android:layout_gravity="center"
            custom:text="Realisasi"
            custom:icon="@drawable/real"
            />

        <com.thowo.jmframework.component.JMVerticalButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTagihMenu"
            android:layout_gravity="center"
            custom:text="Tagihan"
            custom:icon="@drawable/tagih"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/menuRow2"
        android:layout_below="@id/menuRow1"
        android:gravity="center"
        >
        <com.thowo.jmframework.component.JMVerticalButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAngMenu"
            android:layout_gravity="center"
            custom:text="Anggaran"
            custom:icon="@drawable/ang"
            />

        <com.thowo.jmframework.component.JMVerticalButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSetMenu"
            android:layout_gravity="center"
            custom:text="Pengaturan"
            custom:icon="@drawable/set"
            />
    </LinearLayout>


</RelativeLayout>
